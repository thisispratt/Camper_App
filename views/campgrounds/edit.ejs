<%- include("../partials/header.ejs") %>
<div class="container">
    <h1>EDIT: <%= campground.title %></h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campgroundName" value="<%= campground.title %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="imageLink"  value="<%= campground.img %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campgroundDescription" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-info" type="submit">SUBMIT</button>
        </div> 
    </form>

    <a href="/campgrounds"><button class="btn btn-info" type="button"> <- Go Back</button></a>
</div>  


<%- include("../partials/footer.ejs") %>