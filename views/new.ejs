<%- include("partials/header.ejs") %>
<div class="container">
    <h1>CREATE NEW CAMPGROUND</h1>
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="campgroundName" placeholder="campground Name">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="imageLink" placeholder="Image link">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="campgroundDescription" placeholder="Features of the campground!">
        </div>
        <div class="form-group">
            <button class="btn btn-info" type="submit">SUBMIT</button>
        </div> 
    </form>

    <a href="/campgrounds"><button class="btn btn-info" type="button"> <- Go Back</button></a>
</div>  


